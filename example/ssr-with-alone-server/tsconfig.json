{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "watch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "react-router-dom",
      "react-helmet",
    ]
  },
  "exclude": [
    "node_modules",
    "webpack",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "typings/postfix.d.ts",
    "typings/global.d.ts"
  ]
}
